<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/food_search">

    <action
        android:id="@+id/navigate_to_recipe_detail"
        app:destination="@id/recipe_detail_fragment" />

    <fragment
        android:id="@+id/food_search"
        android:name="com.example.foodrecipe.ui.FoodSearchFragment"
        android:label="@string/label_food_search" />

    <fragment
        android:id="@+id/recipe_detail_fragment"
        android:name="com.example.foodrecipe.ui.FoodSearchFragment"
        android:label="Recipe lists"/>
        <argument
            android:name="recipe"
            app:argType="com.example.foodrecipe.data.FoodRecipe"/>

    <fragment
        android:id="@+id/food_search2"
        android:name="com.example.foodrecipe.ui.FoodSearchFragment"
        android:label="Favorite" />

    <fragment
        android:id="@+id/saved_recipes"
        android:name="com.example.foodrecipe.ui.SavedRecipesFragment"
        android:label="@string/label_saved_recipes" />

</navigation>